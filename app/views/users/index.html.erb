<%= render 'users/profile', user: @user, blog: @blog %>
    <div class="col-xs-9">
      <h2>Coroぷりさん一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "noimage.png" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
